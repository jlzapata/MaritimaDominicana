@model IEnumerable<MaritimaDominicana.Models.ProblemDetail>
@{
    ViewBag.Title = "Historico de Solicitudes";
}

<h2>HistoricoSolicitudes</h2>

<div class="form-inline">
    <div class="form-group">
        <label class="control-label" for="startDate">Inicio</label>
        <input class="form-control" type="date" value="" max="now" min="2000-01-01" id="startDate"/>
    </div>
    <div class="form-group">
        <label class="control-label" for="endDate">Fin</label>
        <input class="form-control" type="date" value="" max="now" min="2000-01-01" id="endDate" />
    </div>

    <input type="button" class="btn btn-primary" id="btnBuscarHistorico" value="Buscar">
</div>

<div class="container">
    <div class="row">
        <table class="table table-striped" id="historicoSolicitudes">
            <thead>
                <tr><th>Id</th><th>Problema</th><th>Cliente</th><th>Departamento</th><th>Lugar</th><th>Creado Por</th><th>Descripcion</th><th>Fecha</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProblemDetailId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Problem.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Place.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    </tr>
                }

                <tr><th colspan="3">Total de Registros</th><td>@Model.Count()</td></tr>
            </tbody>
        </table>
    </div>
</div>
