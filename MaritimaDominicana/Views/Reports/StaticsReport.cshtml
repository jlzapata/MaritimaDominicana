@model IEnumerable<MaritimaDominicana.Models.ProblemDetail>
@{
    ViewBag.Title = "Estadisticas de volumen";
}

<h2>Estadisticas de volumen</h2>

<div class="form-inline">
    <div class="form-group colsm-3 col-md-2">
        <label class="control-label" for="startDate">Inicio</label>
        <input class="form-control" type="date" value="" min="2000-01-01" id="startDate" />
    </div>
    <div class="form-group colsm-3 col-md-2">
        <label class="control-label" for="endDate">Fin</label>
        <input class="form-control" type="date" value=""  min="2000-01-01" id="endDate" />
    </div>
    <div class="form-group colsm-3 col-md-2">
        @Html.Label("Por: ", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("categorias", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <input type="button" class="btn btn-primary" id="btnGraphisFilter" value="Filtrar">
</div>

<div class="row" style="clear:both">
    <div id="piechart" style="width:600px; height:450px" class="col-sm-6"></div>
</div>
<div class="row">
    <div id="table_div" class="col-sm-6"></div>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
